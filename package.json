{
  "name": "phos-platform",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "build:scripts": "cd scripts && tsc",
    "cleanup": "node scripts/dist/cleanup-empty.js",
    "pretest": "npm run cleanup -- --dry-run",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "husky",
    "postinstall": "cd src/frontend/phos-web && npm install",
    "dev": "concurrently -n API,WEB -c auto \"dotnet run --project ./src/backend/Phos.Api/Phos.Api.csproj --urls http://localhost:5100\" \"cd ./src/frontend/phos-web && npm install && npm start\""
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.1.0",
    "@swc/core": "^1.3.78",
    "@swc/jest": "^0.2.29",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/chai": "^4.3.10",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.15.32",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@types/sinon": "^17.0.2",
    "@types/sinon-chai": "^3.2.12",
    "@types/supertest": "^2.0.16",
    "axios": "^1.9.0",
    "chai": "^4.3.10",
    "concurrently": "^9.2.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "react-router-dom": "^7.6.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  }
}
