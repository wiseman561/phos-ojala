      "recommend": [
        { "code": "lifestyle.low_gi", "text": "Reduce high-glycemic load foods", "rationale": "A1c elevated" }
      ]
    },
    {
      "id": "hba1c_dm",
      "if": { ">=": [ { "var": "HbA1c" }, 6.5 ] },
      "flag": { "loinc": "4548-4", "severity": "high", "reason": "Diabetes threshold (HbA1c ≥ 6.5%)" },
      "recommend": [
        { "code": "followup.confirm", "text": "Confirm with repeat test or fasting plasma glucose", "rationale": "Diagnostic threshold" }
