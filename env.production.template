# Production Environment Variables for Phos API with Vault Integration

# Vault Configuration
VAULT_ADDR=https://vault.your-domain.com:8200
VAULT_CACERT=/path/to/vault-ca.crt
VAULT_SKIP_VERIFY=false

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80
ASPNETCORE_Kestrel__Limits__MaxConcurrentConnections=1000

# Database Configuration
ConnectionStrings__DefaultConnection=Server=your-db-server;Database=PhosIdentity;User Id=phos_user;Password=your-secure-password;TrustServerCertificate=true

# JWT Configuration (will be loaded from Vault)
JwtSettings__SecretKeyPath=/vault/secrets/jwt-secret.json
JwtSettings__Issuer=PhosHealthcarePlatform
JwtSettings__Audience=PhosHealthcarePlatformClients
JwtSettings__ExpiryMinutes=60

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
Logging__LogLevel__Microsoft.EntityFrameworkCore.Database.Command=Warning

# Health Check Configuration
HealthChecks__Enabled=true
HealthChecks__Timeout=30

# Security Configuration
AllowedHosts=*.your-domain.com,your-domain.com
