{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.phos.health/events/BillingAttempted.schema.json",
  "title": "BillingAttempted",
  "type": "object",
  "required": ["id", "userId", "timestamp", "amount", "method", "status"],
  "properties": {
    "id": { "type": "string" },
    "userId": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "amount": { "type": "number", "minimum": 0 },
    "method": { "type": "string", "enum": ["credit", "ach"] },
    "status": { "type": "string", "enum": ["queued", "processing", "succeeded", "failed"] }
  },
  "additionalProperties": false
}


