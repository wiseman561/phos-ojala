{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.phos.health/events/recommendation/RecommendationGenerated.schema.json",
  "title": "RecommendationGenerated",
  "type": "object",
  "required": ["userId", "timestamp", "recommendations"],
  "properties": {
    "userId": { "type": "string", "minLength": 1 },
    "timestamp": { "type": "string", "format": "date-time" },
    "recommendations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "category", "title"],
        "properties": {
          "id": { "type": "string" },
          "category": { "type": "string" },
          "title": { "type": "string" },
          "detail": { "type": ["string", "null"] }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}


