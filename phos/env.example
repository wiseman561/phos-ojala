# API Gateway
GATEWAY__PORT=8080
# IDP / OIDC (Auth0 or compatible)
IDP__DOMAIN=your-tenant.auth0.com
IDP__ISSUER=https://your-tenant.auth0.com/
IDP__AUDIENCE=https://api.phos.local
IDP__CLIENT_ID=YOUR_CLIENT_ID

# Frontend (Vite) - used by phos-ui
VITE_IDP_DOMAIN=your-tenant.auth0.com
VITE_IDP_CLIENT_ID=YOUR_CLIENT_ID
VITE_IDP_AUDIENCE=https://api.phos.local

# Service URLs (the gateway proxies to these)
LAB_INTERPRETER__URL=http://lab-interpreter:8080
NUTRITION_KIT__URL=http://nutrition-kit:8080
GENOME_KIT__URL=http://genome-kit:8080
MICROBIOME_KIT__URL=http://microbiome-kit:8080
SLEEP_KIT__URL=http://sleep-kit:8080
PHOS_CORE__URL=http://phos-core:8080
AUDIT_LOG__URL=http://audit-log:8080

# Shared infra
POSTGRES__CONNECTION=Host=postgres;Database=phos;Username=phos;Password=CHANGEME
REDIS__CONNECTION=redis:6379
NATS__URL=nats://nats:4222
OTLP__ENDPOINT=http://tempo:4317

# Vault (optional)
VAULT__ADDR=http://vault:8200
VAULT__ROLE_ID=
VAULT__SECRET_ID=
VAULT__KV_PATH=secret/data/phos
VAULT__ENABLED=false

# Future-ready services
BILLING_GATEWAY_URL=http://billing-gateway:8080
FHIR_BRIDGE_URL=http://phos-fhir-bridge:8080
DIGESTION_SCORE_INTERVAL_MIN=1440
