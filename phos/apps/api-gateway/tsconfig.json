{
    "compilerOptions":  {
                            "forceConsistentCasingInFileNames":  true,
                            "module":  "commonjs",
                            "declaration":  false,
                            "removeComments":  true,
                            "emitDecoratorMetadata":  true,
                            "experimentalDecorators":  true,
                            "allowJs":  false,
                            "target":  "ES2021",
                            "sourceMap":  true,
                            "outDir":  "./dist",
                            "baseUrl":  "./",
                            "incremental":  true,
                            "skipLibCheck":  true,
                            "strict":  true,
                            "esModuleInterop":  true,
                            "allowSyntheticDefaultImports":  true
                        },
    "exclude":  [
                    "node_modules",
                    "dist",
                    "test",
                    "**/*spec.ts"
                ]
}
